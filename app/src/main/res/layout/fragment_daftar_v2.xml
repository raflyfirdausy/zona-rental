<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Fragment.DaftarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#00dad9"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/et_namaLengkap"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:hint="   Nama Lengkap"
            android:textColor="#000000"
            android:drawableTint="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#ababab"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:hint="   Email"
            android:textColor="#000000"
            android:drawableTint="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#ababab" />

        <RadioGroup
            android:id="@+id/rb_jenisKelamin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/rb_lakiLaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Laki-laki"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rb_perempuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Perempuan" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:minEms="6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:hint="   Password"
            android:textColor="#000000"
            android:drawableTint="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#ababab" />

        <EditText
            android:id="@+id/et_password2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:minEms="6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:hint="   Ulang Password"
            android:textColor="#000000"
            android:drawableTint="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#ababab" />

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round"
            android:layout_marginTop="10dp"
            android:text="SIGN UP"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun? "
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login disini"
                android:id="@+id/tv_klikdisini"
                android:textColor="#3fc0d9"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
